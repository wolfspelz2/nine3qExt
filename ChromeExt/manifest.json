{
    "manifest_version": 2,
    "name": "Weblin",
    "short_name": "Weblin",
    "version": "1.0.7",
    "description": "Avatars and Things on Web Pages",
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Your Weblin"
    },
    "options_page": "popup.html",
    "icons": {
        "128": "./assets/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "contentscript.js"
            ],
            "css": [
                "contentscript.css"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "manifest.json",
        "assets/*",
        "popup.*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
